<%= link_to "Add new", new_todo_path %>

<ul class="todos">
    <% @todos.each do |todo| %>
        <li class="<%= "completed" if todo.completed? %>">  <!--- eu nem sabia que isso era possÃ­vel -->
            <%= todo.title %>
            <% if todo.completed? %>
                <%= button_to "Not done", todo_completion_path(todo), method: :delete%>
            <% else %>
                <%= button_to "Done", todo_completion_path(todo) %>
            <% end %>
        </li>
    <% end %>
</ul>